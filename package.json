{
  "name": "restaurant-orders",
  "version": "1.0.0",
  "description": "Restaurant order manager API using NodeJS.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "npx eslint ./src/**",
    "lint:fix": "npx eslint ./src/** --fix",
    "test": "NODE_ENV=test jest --runInBand",
    "test:db:setup": "NODE_ENV=test npx sequelize-cli db:drop && NODE_ENV=test npx sequelize-cli db:create && NODE_ENV=test npx sequelize-cli db:migrate",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --runInBand --coverage"
  },
  "author": "Caio Gallo",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.17",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "sequelize-cli": "^6.6.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "ts-jest": "^29.3.2"
  }
}
